<div id="user_show" class="row">
  <div>
    <div class="panel panel-default">

      <div class="panel-heading user_image">
        
        <div class="row">
          <div class="col-md-5">
            <% if @user.image? %>
              <%= image_tag @user.image.url(:medium) %>
            <% end %>  
          </div>
          <div class="col-md-7">
            <h1><%= @user.name %></h1>
            <h2 class="motto">"<%= @user.motto %>"</h2>
            <h3>Allergens avoiding:</h3>
            <% @user.allergens.each do |allergen| %>
              <%= allergen.name %>&nbsp;
            <% end %>
          </div>
        </div>

      </div>

      <div id="contributed" class="panel-body">
        <h3>Contributed Recipes</h3>
        <% if @user.recipes %>
          <%= render partial: "recipes/recipe_bricks", locals: {recipes: @user.recipes} %>
        <% else %>
          <p>Waiting for <%= @user.name %>'s first recipe </p>
        <% end %>
      </div>
      
      <div class="panel-footer">
        <h3>Favorite Recipes</h3>
          <% if @user.favorites %>
            <%= render partial: "recipes/recipe_bricks", locals: {recipes: @user.favorites } %>
          <% else %>
            <p>Waiting for <%= @user.name %>'s first favorite recipe</p>
          <% end %>        
      </div>

    </div><!-- /.panel -->
  </div><!-- /col-md-8 -->
</div> <!-- /.row-->