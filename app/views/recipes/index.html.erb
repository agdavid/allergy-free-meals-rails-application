<h1>Recipe Index Page</h1>
<ul>
  <% @recipes.each do |recipe| %>
    <li><%= link_to recipe.title, recipe_path(recipe) %><br />
        <%= link_to (image_tag recipe.image.url(:thumb)), recipe_path(recipe)%><br />
        Submitted <%= time_ago_in_words(recipe.created_at) %> ago by <%= recipe.author.name %><br />
        <%= link_to like_recipe_path(recipe), method:"put" do %>
          <span class="glyphicon glyphicon-heart"></span>
          <%= recipe.get_upvotes.size %>
        <% end %> | 
        <%= link_to dislike_recipe_path(recipe), method:"put" do %>
          <%= recipe.get_downvotes.size %>
        <% end %>
    </li>
  <% end %>
</ul>