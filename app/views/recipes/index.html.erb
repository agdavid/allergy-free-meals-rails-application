<div class="transitions-enabled masonry" id="recipes">
  <% @recipes.each do |recipe| %>
    <div class="box panel panel-default masonry-brick">
      <!-- image -->
      <%= link_to (image_tag recipe.image.url), user_recipe_path(recipe.user, recipe) %>
      <!-- title -->
      <h2><%= link_to recipe.title, user_recipe_path(recipe.user, recipe) %></h2>
      <p class="user">Submitted by <%= recipe.user.name %>
        <!-- acts as votable -->
        <%= link_to like_recipe_path(recipe), method:"put" do %>
          <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
        <% end %>
        <%= recipe.get_upvotes.size %>| 
        <%= link_to dislike_recipe_path(recipe), method:"put" do %>
          <i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
        <% end %>
        <%= recipe.get_downvotes.size %>
      </p>
    </div><!-- /.box -->
  <% end %> <!-- /iterator -->
</div><!-- /.transitions-enabled masonry -->
