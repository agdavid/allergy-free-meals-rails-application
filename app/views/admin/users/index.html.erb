<div id="admin_user_index" class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      
      <div class="panel-heading">
        <h1>Admin Panel: User Index</h1>  
      </div>
      
      <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Profile</th>
              <th>Account</th>
              <th>Admin?</th>
              <th>Destroy</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user), class: "btn btn-default "%></td>
                <td>TBD</td>
                <td>TBD</td>
                <td>TBD</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    
    </div><!-- /.panel -->    
  </div><!-- /.col -->
</div> <!-- /.row-->